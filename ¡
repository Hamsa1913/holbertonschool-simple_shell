#include "simple_shell.h"
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>

/**
 * hsh_loop - Main shell loop, reads and executes commands
 *
 * Return: 0 on success
 */
int hsh_loop(void)
{
    char *line = NULL;
    size_t len = 0;
    ssize_t read;
    char **argv;

    while (1)
    {
        printf(":) ");
        fflush(stdout);

        read = getline(&line, &len, stdin);
        if (read == -1) /* EOF or error */
        {
            free(line);
            break;
        }

        /* Trim leading/trailing spaces */
        trim_spaces(line);

        /* Skip empty lines */
        if (line[0] == '\0')
            continue;

        argv = split_line(line);
        if (argv == NULL)
            continue;

        /* Execute command if found */
        if (access(argv[0], F_OK) == 0 || find_path(argv[0]))
        {
            if (fork() == 0)
            {
                execve(argv[0], argv, environ);
                perror("execve");
                exit(EXIT_FAILURE);
            }
            else
                wait(NULL);
        }
        else
        {
            fprintf(stderr, "%s: command not found\n", argv[0]);
        }

        free_argv(argv);
    }

    return (0);
}
